        android:text="676"
        android:layout_marginLeft="15dp"
        />
    <ImageView
        android:id="@+id/iv_icon3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_mail_outline_black_20dp"
        android:layout_marginLeft="15dp"
        />
    <TextView
        android:id="@+id/tv_icon3_label"
        android:layout_width="wrap_content"
